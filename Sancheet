#include <stdio.h>

typedef struct process {
    char pname[10];
    int bt, at;
    int rt, wt, tat;
} Process;

int main() {
    Process p[10];
    int n, tq, i, time = 0, remain;
    float avg_wt = 0, avg_tat = 0;

    printf("Enter the number of processes: ");
    scanf("%d", &n);

    printf("Enter time quantum: ");
    scanf("%d", &tq);

    remain = n;

    for(i = 0; i < n; i++) {
        sprintf(p[i].pname, "P%d", i+1);
        printf("\nEnter Burst Time for %s: ", p[i].pname);
        scanf("%d", &p[i].bt);
        printf("Enter Arrival Time for %s: ", p[i].pname);
        scanf("%d", &p[i].at);
        p[i].rt = p[i].bt; // remaining time
    }

    int complete = 0, flag = 0;
    while(complete < n) {
        flag = 0;
        for(i = 0; i < n; i++) {
            if(p[i].at <= time && p[i].rt > 0) {
                flag = 1;
                if(p[i].rt > tq) {
                    time += tq;
                    p[i].rt -= tq;
                } else {
                    time += p[i].rt;
                    p[i].tat = time - p[i].at;
                    p[i].wt = p[i].tat - p[i].bt;
                    avg_wt += p[i].wt;
                    avg_tat += p[i].tat;
                    p[i].rt = 0;
                    complete++;
                }
            }
        }
        if(flag == 0) time++; // idle CPU
    }

    printf("\nProcess\tAT\tBT\tWT\tTAT");
    for(i = 0; i < n; i++)
        printf("\n%s\t%d\t%d\t%d\t%d", p[i].pname, p[i].at, p[i].bt, p[i].wt, p[i].tat);

    printf("\n\nAverage Waiting Time: %.2f", avg_wt/n);
    printf("\nAverage Turnaround Time: %.2f\n", avg_tat/n);

    return 0;
} 
